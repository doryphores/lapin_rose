@import url(https://fonts.googleapis.com/css?family=Bitter:400,700,400italic);

* {
  box-sizing: border-box;
}

body {
  background-color: #f6f6f6;
  color: #292929;
  font-family: Bitter, serif;
  line-height: 1.8;
}

p {
  font-size: 20px;
  margin: 1.5em 0;
  text-align: justify;

  &.centered {
    text-align: center;
  }
}

.site-header {
  padding: 400px 0 10px;
  background-image: url(/images/lapinrose.png);
  background-repeat: no-repeat;
  background-size: 400px 400px;
  background-position: center top;
  border-bottom: 2px solid #f2e0ec;
  text-align: center;

  h1 {
    margin: 0;
  }
}

.wrapper {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}
